<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea_Extraclase_4.MainPage">

    <StackLayout HorizontalOptions="Center"
                 VerticalOptions="CenterAndExpand">
        <Label Text="Crear tu lista" FontSize="30"/>
        <Entry Placeholder="Valor" x:Name="Insertar"/>
        <Button Text="Ingresar" Clicked="Button_Clicked"/>
        <Entry Placeholder="Posicion" x:Name="Obtener"/>
        <Button Text="Obtener" Clicked="Button_Clicked_1"/>
        <Entry Placeholder="Valor" x:Name="Valor"/>
        <Entry Placeholder="Posicion" x:Name="Posicion"/>
        <Button Text="Modificar" Clicked="Button_Clicked_2"/>
    </StackLayout>

</ContentPage>
